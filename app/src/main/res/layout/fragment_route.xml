<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RouteFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="PETA UTAMA"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/border"/>
            <ImageView
                android:id="@+id/route"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@raw/map_trabas"
                android:paddingBottom="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Koridor 1"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/border"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@raw/koridor1"
                android:paddingBottom="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Koridor 2"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/border"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@raw/koridor2"
                android:paddingBottom="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Koridor 3"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/border"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@raw/koridor3"/>


        </LinearLayout>
    </ScrollView>
</FrameLayout>